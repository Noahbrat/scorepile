# Application Environment Configuration
# Copy this file to .env and update with your actual values

# Database Configuration
DATABASE_URL="mysql://username:password@localhost:3306/myapp"

# JWT Secret (generate a secure random string: openssl rand -hex 32)
JWT_SECRET="your-super-secret-jwt-key-here"

# Security Salt (generate a secure random string: openssl rand -hex 32)
SECURITY_SALT="your-super-secret-salt-here"

# CORS Configuration
# Comma-separated list of allowed origins
CORS_ALLOWED_ORIGINS="http://localhost:5173,http://localhost:8765"

# Rate Limiting Configuration
RATE_LIMIT_UPLOADS_PER_MINUTE=10
RATE_LIMIT_UPLOADS_PER_HOUR=100
RATE_LIMIT_BURST_ALLOWANCE=5

# Debug Mode (set to false in production)
DEBUG=true
